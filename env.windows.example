# Configurações do Servidor - Windows
PORT=3000
NODE_ENV=development

# Configurações do TikTok (para produção)
TIKTOK_API_KEY=seu_api_key_aqui
TIKTOK_SECRET=seu_secret_aqui
TIKTOK_ROOM_ID=sala_padrao

# Configurações de Banco de Dados (opcional)
DATABASE_URL=postgresql://user:password@localhost:5432/tiktok_live_ai

# Configurações do Redis (opcional, para cache)
REDIS_URL=redis://localhost:6379

# Configurações de Segurança
JWT_SECRET=seu_jwt_secret_super_seguro
SESSION_SECRET=seu_session_secret_super_seguro

# Configurações de Log - Windows
LOG_LEVEL=info
LOG_FILE=logs/app.log
LOG_ENCODING=utf8

# Configurações de Email (opcional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=seu_email@gmail.com
SMTP_PASS=sua_senha_de_app

# Configurações de Upload - Windows
UPLOAD_PATH=uploads/
MAX_FILE_SIZE=10485760
UPLOAD_TEMP_DIR=temp/

# Configurações de Performance - Windows
WORKER_THREADS=2
MEMORY_LIMIT=512mb
CPU_PRIORITY=normal

# Configurações de Analytics
ANALYTICS_ENABLED=true
ANALYTICS_RETENTION_DAYS=30
ANALYTICS_BATCH_SIZE=100

# Configurações de Gamificação
GAMIFICATION_ENABLED=true
POINT_DECAY_RATE=0.95
LEVEL_MULTIPLIER=1.5

# Configurações de Efeitos
EFFECTS_ENABLED=true
MAX_CONCURRENT_EFFECTS=3
EFFECT_QUEUE_SIZE=50
EFFECT_RENDER_MODE=canvas

# Configurações de Voz
VOICE_ENABLED=true
MAX_VOICE_QUEUE=25
VOICE_TIMEOUT=30000
VOICE_CACHE_ENABLED=true

# Configurações de Detecção de Movimento - Windows
MOTION_ENABLED=true
MOTION_SENSITIVITY=0.4
MOTION_MIN_AREA=300
MOTION_BLUR_SIZE=15
MOTION_USE_GPU=false
MOTION_FRAME_RATE=30

# Configurações de WebSocket
WS_HEARTBEAT_INTERVAL=30000
WS_MAX_RECONNECT_ATTEMPTS=5
WS_RECONNECT_DELAY=5000
WS_MAX_PAYLOAD_SIZE=1048576

# Configurações Específicas do Windows
WINDOWS_COMPATIBILITY_MODE=true
WINDOWS_USE_NATIVE_APIS=true
WINDOWS_CAMERA_INDEX=0
WINDOWS_AUDIO_DEVICE=default

# Configurações de Desenvolvimento
DEV_HOT_RELOAD=true
DEV_DEBUG_MODE=true
DEV_SHOW_PERFORMANCE=true 